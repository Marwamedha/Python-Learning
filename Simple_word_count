text = ('this is sample text with several words for learning every thing'
        'this is more sample text wIth some different words for learning purpose only '
        'that is also another text with other different words'  
       )
text_2 =text.split()
word_count={}
for i  in  (text_2):
    if i in word_count:
        word_count[i] +=1
    else:
        word_count[i] =1
for word ,count in sorted(word_count.items()):
    print(f'{word:<5} : {count} ')
